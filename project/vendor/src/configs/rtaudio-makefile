
RTAUDIO_SRC := RtAudio.cpp

RTAUDIO_OBJS := $(RTAUDIO_SRC:%.cpp=%$(SS_OBJEXT))

ifdef SS_MAC
	RTAUDIO_DEFS := -DHAVE_GETTIMEOFDAY -D__MACOSX_CORE__
endif
ifdef SS_LINUX
	RTAUDIO_DEFS := -DHAVE_GETTIMEOFDAY -D__LINUX_ALSA__
endif
ifdef SS_WINDOWS
	RTAUDIO_DEFS := -DHAVE_GETTIMEOFDAY -D__WINDOWS_DS__
endif

librtaudio$(SS_LIBEXT):$(RTAUDIO_OBJS)
	$(SS_CREATELIB)$@ $(RTAUDIO_OBJS)

%$(SS_OBJEXT):%.cpp
	$(SS_CPP) $(RTAUDIO_DEFS) $< -c $(SS_OBJOUT)$@

clean:
	rm -f $(RTAUDIO_OBJS)

